{
  "manifest_version": 3,
  "name": "Browser Assistant (Simple)",
  "version": "1.0.0",
  "description": "Simple AI-powered browser assistant for testing",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background-simple.js"
  }
}
