{
  "manifest_version": 3,
  "name": "Browser Assistant",
  "version": "1.0.0",
  "description": "AI-powered browser assistant with LangGraph integration",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "mermaid-render.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assistant.html", "assistant.js", "assistant.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
